<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/push_bg"
    android:padding="16dp"
    tools:context=".Fragments.FitBodyFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Fit Mind"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:src="@drawable/img_fitbody_dummy"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Song Title"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            style="@style/TextAppearance.AppCompat.Title"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer too"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:layout_marginTop="8dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:weightSum="3"
            android:gravity="center"
            >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@drawable/curve_bg_white"
                android:gravity="center"
                android:layout_marginRight="4dp"
                android:id="@+id/fitbody_nutrition"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nutrition"
                    android:drawableTop="@drawable/ic_nutrition"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="#2E2E2E"
                    android:drawablePadding="10dp"

                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@drawable/curve_bg_white"
                android:gravity="center"
                android:layout_marginRight="4dp"
                android:id="@+id/fitbody_exercise"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exercises"
                    android:drawableTop="@drawable/ic_exercise"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="#2E2E2E"
                    android:drawablePadding="10dp"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@drawable/curve_bg_white"
                android:gravity="center"
                android:id="@+id/fitbody_mobility"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobility"
                    android:drawableTop="@drawable/ic_mobility"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="#2E2E2E"
                    android:drawablePadding="10dp"
                    />

            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:weightSum="3"
            android:gravity="center"
            >

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@drawable/curve_bg_white"
                android:gravity="center"
                android:layout_marginRight="4dp"
                android:id="@+id/fitbody_challenges"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Challenges"
                    android:drawableTop="@drawable/ic_challenges"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="#2E2E2E"
                    android:drawablePadding="10dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@drawable/curve_bg_white"
                android:gravity="center"
                android:layout_marginRight="4dp"
                android:id="@+id/fitbody_programs"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Programs"
                    android:drawableTop="@drawable/ic_programs"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="#2E2E2E"
                    android:drawablePadding="10dp"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="110dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@drawable/curve_bg_white"
                android:gravity="center"
                android:id="@+id/fitbody_details"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="My Push"
                    android:drawableTop="@drawable/ic_mypush"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textColor="#2E2E2E"
                    android:drawablePadding="16dp"
                    />

            </RelativeLayout>




        </LinearLayout>



    </LinearLayout>


</ScrollView>